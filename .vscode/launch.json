{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}